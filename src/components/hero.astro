---
import logo from "../assets/logo.png";
import cli from "../assets/cli.png";
---

<section class="hero">
    <header>
        <img src={logo.src} alt="" class="logo" />
        <nav class="menu">
            <a href="http://">Home</a>
            <a href="http://">Why Use?</a>
            <a href="http://">Faq</a>
        </nav>
    </header>
    <div class="box">
        <h1>
            Frank - your personal committer with <span>zero patience</span> for your
            half-assed code.
        </h1>
        <p>
            <span>Frank</span> uses AI (or maybe just bad attitude), generates plausible
            messages, and comments on your genius with surgical sarcasm.
        </p>
    </div>
    <img src={cli.src} alt="" />
    <div class="form">
        <form action="" method="post">
            <input
                type="email"
                name=""
                id=""
                placeholder="Enter your best email..."
            />
            <button type="submit">Waitlist</button>
        </form>
    </div>
    <p class="p-form">
        Submitting your email won't improve your code, but it will at least
        guarantee you a place in the queue.
    </p>
</section>

<!-- css here -->
<style>
    section {
        display: flex;
        max-width: 700px;
        flex-direction: column;
        align-items: center;
    }
    header {
        width: 100%;
        max-width: 700px;
        padding-top: 20px;
        display: flex;
        padding-bottom: 85px;
        justify-content: space-between;
    }
    .logo {
        height: auto;
    }
    .form {
        padding-top: 14px;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    form {
        width: 100%;
        max-width: 555px;
        display: flex;
        gap: 24px;
    }
    .form input {
        width: 100%;
        border-radius: 8px;
        padding: 6px 24px;
        outline: none;
        background-color: #101116;
        border: 1px solid #1e2126;
    }
    .form button {
        width: 120px;
        font-weight: 600;
        font-family: "DM Sans", sans-serif;
        padding: 6px 24px;
        background-color: #ffff;
        border-radius: 7px;
        cursor: pointer;
    }
    .p-form {
        font-size: 13px;
        color: #dfdedf;
        padding: 0px 90px;
    }
    span {
        color: #4acd9b;
    }
    h1 {
        font-size: 28px;
        font-weight: 500;
        text-align: center;
        font-family: "DM Sans", sans-serif;
    }
    p {
        font-size: 16px;
        font-weight: 300;
        /* color: #fdfdfd; */
        text-align: center;
    }
    .menu {
        display: flex;
        gap: 24px;
    }
    .menu a {
        font-size: 13px;
        color: #dfdedf;
        text-decoration: none;
    }
    .menu a:hover {
        text-decoration: underline;
        color: #ffff;
    }
    .hero {
        display: flex;
        justify-content: center;
        width: 100%;
    }
    .box {
        padding: 14px 80px;
    }
</style>
